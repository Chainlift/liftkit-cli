{
  "name": "@chainlift/liftkit",
  "version": "0.1.1",
  "description": "A standalone CLI for installing liftkit components without shadcn dependency",
  "license": "Apache-2.0",
  "bin": {
    "liftkit": "dist/cli.cjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "bundle": "esbuild source/cli.ts --bundle --platform=node --target=node16 --format=cjs --outfile=dist/cli.cjs --minify",
    "build": "npm-run-all --parallel lint typecheck bundle",
    "dev": "npm-run-all --parallel \"typecheck -- --watch\" \"bundle -- --watch\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "test:integration": "node --loader ts-node/esm scripts/test-integration.ts",
    "test:clean": "rm -rf test_output/",
    "test:compare": "node --loader ts-node/esm scripts/compare-results.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
    "docs": "typedoc --out docs source"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.13.1",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@vdemedes/prettier-config": "^2.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "chalk": "^5.2.0",
    "commander": "^12.0.0",
    "diff": "^8.0.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdoc": "^4.0.4",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rxjs": "^7.8.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.28.7",
    "typescript": "^5.0.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "trailingComma": "all"
  }
}
